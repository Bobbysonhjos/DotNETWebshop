@page
@model Clothes.Pages.CheckoutModel
@{
}

<div>
    <h4 class="mb-3">Shopping Cart</h4>
    <hr class="mb-4">
    @foreach (var product in @Model.ShoppingCart.Products)
    {
        <div class="d-flex flex-row justify-content-between align-items-center p-2 bg-white mt-4 px-3 rounded">
            <div class="mr-1"><img class="rounded" src="@product.ImgUrl" width="70"></div>
            <div class="d-flex flex-column align-items-center product-details">
                <span>@product.Name</span>
                <div class="d-flex flex-row product-desc">
                </div>
            </div>
            <div class="d-flex flex-row align-items-center">
            </div>
            <div>
                <span>@product.Price</span>
            </div>
        </div>
    }
    <div class="d-flex flex-row align-items-center pull-right"><span class="mr-1">Total:</span><span class="mr-1">@Model.ShoppingCart.GetTotalCost()</span></div>
    <br />

    <hr class="mb-4">
    <h4 class="mb-3">Payment</h4>
    <form method="post">
        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="Card.Name"></label>
                <input type="text" class="form-control" asp-for="Card.Name">
                <small class="text-muted">Full name as displayed on card</small>
                <div class="invalid-feedback"> Name on card is required </div>
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="Card.CardNumber"></label>
                <input type="text" class="form-control" asp-for="Card.CardNumber">
                <div class="invalid-feedback"> Credit card number is required </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3 mb-3">
                <label asp-for="Card.Expiration"></label>
                <input type="text" class="form-control" asp-for="Card.Expiration">
                <div class="invalid-feedback"> Expiration date required </div>
            </div>
            <div class="col-md-3 mb-3">
                <label asp-for="Card.CVV"></label>
                <input type="text" class="form-control" asp-for="Card.CVV">
                <div class="invalid-feedback"> Security code required </div>
            </div>
        </div>
        <hr class="mb-4">

        <div class="btn-group">
            <button class="btn btn-primary mr-1" type="submit" asp-page-handler="Pay">Pay Now</button>
            <button class="btn btn-primary" type="submit" asp-page-handler="PayLater">Pay Later</button>
        </div>

    </form>
</div>                 
