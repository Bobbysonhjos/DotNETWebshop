@page
@model Clothes.Pages.OrdersModel
@{
}
<div class="dropdown indexDropdown">
    <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
        Sort by
        <span class="caret"></span>
    </button>
    <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
        <li><a Style="color:black" asp-route-sortOrder="?sort=Paid">Paid</a></li>
        <li><a Style="color:black" asp-route-sortOrder="?sort=NotPaid">NotPaid</a></li>
    </ul>
</div>

<div class="text-center">
    <h1 class="display-4">Orders</h1>
</div>
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">OrderDate</th>
            <th scope="col">Price</th>
            <th scope="col">IsPaid</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model.Orders)
        {
            <tr>
                <th scope="row">@order.OrderDate</th>
                <td>@order.GetTotalCost()</td>
                <td>@order.IsPaid</td>
                <td>
                    @if (order.IsPaid)
                    {
                        <a asp-page="./Receipt" asp-route-orderid="@order.Id" class="btn btn-primary">Reciept</a>
                    }
                    else
                    {
                        <a asp-page="./Pay" asp-route-orderid="@order.Id" class="btn btn-primary">Pay</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>